<?xml version="1.0" encoding="utf-8" ?> 
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <ImageView
        android:src="@drawable/splash"
        android:contentDescription="@string/image-description-logo" 
        android:layout_rowWeight="3"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        android:scaleType="centerCrop"
        />
    
    <GridLayout
        android:layout_rowWeight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        >
        <Button
            android:id="@+id/HomeButton"
            android:text="@string/button-home"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/purple"
            />
        <Button
            android:id="@+id/TakenButton"
            android:text="@string/button-taken"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/green"
            />
        <Button
            android:id="@+id/AdresButton"
            android:text="@string/button-adres"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/green-selected"
            />
        <Button
            android:id="@+id/KaartButton"
            android:text="@string/button-kaart"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/green"
            />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_rowWeight="5"
        android:layout_gravity="fill_horizontal"
        android:orientation="vertical"
        android:padding="10dip"
        >
        <TextView
            android:id="@+id/Adres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:textStyle="bold"
            android:padding="5dip"
            />
        <TextView
            android:id="@+id/PostcodeWoonplaats" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:textStyle="bold"
            android:padding="5dip"
            />
        <TextView
            android:id="@+id/Telefoonnummer" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:textStyle="bold"
            android:paddingLeft="5dip"
            android:paddingTop="50dip"
            />
    </LinearLayout>
        
    <TextView
        android:id="@+id/Planning" 
        android:text="@string/planning"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_rowWeight="2"
        android:textSize="18dip"
        android:textStyle="bold"
        android:paddingLeft="15dip"
        />
        
    <Button
        android:id="@+id/AanwezigButton"
        android:textAlignment="center"
        android:layout_rowWeight="1"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        android:background="@color/green"
        />

</GridLayout>
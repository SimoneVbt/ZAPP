
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/ImageLogin"
        android:src="@drawable/splash"
        android:contentDescription="@string/image-description-logo"
        android:layout_rowWeight="3"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        android:scaleType="centerCrop"
         />
    <TextView
        android:id="@+id/FlashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dip"
        android:textColor="#9932CC"
        android:textSize="18dip"
        />
    <GridLayout
        android:id="@+id/LoginForm" 
        android:orientation="vertical"
        android:layout_rowWeight="4"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        >
        <EditText
            android:inputType="textPersonName"
            android:id="@+id/Username"
            android:layout_rowWeight="1"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_edittext_border"
            android:padding="8dip"
            android:hint="gebruikersnaam"
            />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/Password"
            android:layout_rowWeight="1"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/login_edittext_border"
            android:padding="8dip"
            android:hint="wachtwoord"
            />
        <Button
            android:text="Log in"
            android:id="@+id/LoginSubmit"
            android:layout_rowWeight="1"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dip"
            />
    </GridLayout>
    <Space
        android:id="@+id/SpaceLogin"
        android:layout_rowWeight="3"
        android:layout_width="0dip"
        android:layout_height="0dip"
        />
</GridLayout>
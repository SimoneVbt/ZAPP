
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <ImageView
        android:id="@+id/Image"
        android:src="@drawable/splash"
        android:contentDescription="@string/image-description-logo" 
        android:layout_rowWeight="3"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        android:scaleType="centerCrop"
        />
    
    <GridLayout
        android:id="@+id/DetailTabs"
        android:layout_rowWeight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        >
        <Button
            android:id="@+id/HomeButton"
            android:text="@string/button-home"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/purple"
            />
        <Button
            android:id="@+id/TakenButton"
            android:text="@string/button-taken"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/green-selected"
            />
        <Button
            android:id="@+id/AdresButton"
            android:text="@string/button-adres"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/green"
            />
        <Button
            android:id="@+id/KaartButton"
            android:text="@string/button-kaart"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/green"
            />
    </GridLayout>
    
    <ListView
        android:id="@+id/Takenlijst" 
        android:layout_rowWeight="6"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        />
    <Button
        android:id="@+id/AanwezigButton"
        android:textAlignment="center"
        android:layout_rowWeight="1"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        android:background="@color/green"
        />
</GridLayout>
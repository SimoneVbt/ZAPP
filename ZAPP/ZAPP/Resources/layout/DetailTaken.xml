
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <ImageView
        android:id="@+id/Image"
        android:src="@drawable/splash"
        android:contentDescription="@string/image-description-logo" 
        android:layout_rowWeight="3"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        android:scaleType="centerCrop"
        />
    
    <GridLayout
        android:id="@+id/DetailTabs"
        android:layout_rowWeight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        >
        <Button
            android:id="@+id/HomeButton"
            android:text="@string/button-home"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/purple"
            />
        <Button
            android:id="@+id/TakenButton"
            android:text="@string/button-taken"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/green-selected"
            />
        <Button
            android:id="@+id/AdresButton"
            android:text="@string/button-adres"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/green"
            />
        <Button
            android:id="@+id/KaartButton"
            android:text="@string/button-kaart"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:background="@color/green"
            />
    </GridLayout>
    
    <ListView
        android:id="@+id/Takenlijst" 
        android:layout_rowWeight="4"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        />

	<ScrollView
        android:layout_rowWeight="2"
		android:layout_width="0dip"
		android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        android:paddingLeft="10dip"
        android:paddingTop="10dip"
        android:paddingRight="10dip"
		>
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            android:orientation="vertical"
            >
		    <TextView
		        android:text="@string/opmerkingen"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
                android:textSize="18dip"
			    android:textStyle="bold"
                android:textColor="@color/textColor"
		        />
            <TextView
		        android:id="@+id/Opmerkingen"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
                android:textSize="18dip"
                android:textColor="@color/textColor"
		        />
        </LinearLayout>
	</ScrollView>
	
    <ListView
        android:id="@+id/AanwezigButton"
        android:layout_rowWeight="1"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_gravity="fill_horizontal"
        />
</GridLayout>